@page
@model RazorPage.Pages.Employees.Employees

@{
    ViewData["Title"] = "Employees";
    ViewData["ShowButtons"] = true;
}
@if (TempData["SM"]!=null)
{
    <div class="alert alert-success text-center">
        @TempData["SM"]
    </div>
}
<form method="get" class="mb-3">
    <div class="input-group">
        <input class="form-control" asp-for="SearchTerm"/>
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

@* @await Component.InvokeAsync("HeadCount") *@
<vc:head-count dept="@null"></vc:head-count>

<h1>Employees</h1>
<div class="row">
    @foreach (var item in Model.Employee)
    {
        <div class="col-12 col-sm-6 col-lg-4">
            <partial name="_DisplayEmployeesPartial" model="item" view-data="ViewData"/>
        </div>
    }
</div>