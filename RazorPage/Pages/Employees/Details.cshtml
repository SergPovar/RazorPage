@page "{id}"
@model RazorPage.Pages.Employees.Details

@{
    ViewData["Title"] = "Employee Details";
    // var photoPath1 = $"/images/{item.PhotoPath ?? "noimage.png"}";
    Layout = "_Layout";
    var employee = Model.Employee;
    var photoPath = $"/images/{employee.PhotoPath ?? "noimage.png"}";
}
<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        @* @await Component.InvokeAsync("HeadCount", new { dept = Model.Employee.Department}) *@
        <vc:head-count dept="@Model.Employee.Department"></vc:head-count>
    </div>
</div>
<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        <div class="card cardBoxShadow">
            <div class="card-header cardHeaderStyle text-center">
                <h1>@employee.Name</h1>
            </div>
            <div class="card-body cardBoxShadow text-center">
                <div class="row">
                    <div class="col col-lg-9">
                        <h4 class="cardTextLeftFloating">Employee ID: @employee.Id</h4><hr/>
                        <h4 class="cardTextLeftFloating">Email: @employee.Email</h4><hr/>
                        <h4 class="cardTextLeftFloating">Department: <span class="text-danger font-weight-bold">@employee.Department</span> </h4><hr/>
                    </div>
                    <div class="col col-lg-3">
                        <div style="border-right:1px solid rgba(0,0,0,.1);">
                            <img class="card-img-top imageThumbnail border border-primary" style="background-color: #dle7ff;" src="@photoPath" asp-append-version="true"/>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card-footer text-center" style="background-color: rgba(0,0,0,0.25);">
                        <a asp-page="Employees" class="btn btn-success buttonShadow">Back</a>
                        <a href="#" class="btn btn-primary buttonShadow">Edit</a>
                        <a href="#" class="btn btn-danger buttonShadow">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
